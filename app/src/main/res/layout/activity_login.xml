<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    tools:context=".Login">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:layout_marginTop="55dp"
        app:srcCompat="@drawable/usu" />


    <EditText
        android:id="@+id/et_usuario"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/styleet"
        android:drawableStart="@drawable/usuario"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Ingrese el Nombre del Usuario"
        android:inputType="textPersonName"
        android:paddingLeft="25dp" />

    <EditText
        android:id="@+id/et_pass"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/styleet"
        android:drawableStart="@drawable/candado"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="textPersonName"
        android:paddingLeft="25dp" />

    <Button
        android:id="@+id/btnlog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:layout_marginTop="35dp"
        android:background="@drawable/stylebuton"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"

        />


</LinearLayout>